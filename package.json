{
  "name": "printer-restaurant",
  "private": true,
  "version": "0.0.0",
  "main": "dist/main.js",
  "author": "sokphaladam",
  "description": "A printer management system for restaurants",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env DEV= tsc-watch -p tsconfig-electron.json --onSuccess \\\"electron .\\\"\"",
